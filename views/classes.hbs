
<div class="center"><form method="get" action="/"  >
    <button class="hbutton" type="submit">Go Home</button>
    </form>
    </div>
    
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
        <th>Class ID</th>
        <th>Grade</th>
        <th>Teacher</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each classes}}
        <tr>
            <td>{{classID}}</td>
            <td>{{classGrade}}</td>
            <td>{{classTeacher}}</td>
            <td><button onclick="deleteClass({{classID}})" id="abutton">Delete</button></td>
            <td>
                <button><a href="/classes/{{classID}}" id="button">Update</a></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>