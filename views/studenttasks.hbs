
<div class="center"><form method="get" action="/"  >
    <button class="hbutton" type="submit">Go Home</button>
    </form>
    </div>
    
<form id="addstudenttask" action="/studenttasks" method="post">
    Select a Student <select name="studentID" id="input-student-ajax">
        <option value=""></option>
        {{#each students}}
        <option value="{{studentID}}">{{studentID}}</option>
        {{/each}}
    </select>

    Tasks: <select name="taskID" id="input-task-ajax">
        {{#each tasks}}
        <option value="{{taskID}}">{{taskID}}</option>
        {{/each}}
    </select>
    <div class="center">
        <input type="submit" value="Add" id="sbutton">
    </div>
</form>
 </div>
<br/>
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
        <th>Student ID</th>
        <th>Task ID</th>
        <th>Completed, 1 True, 0 False</th>
        <th>Delete</th>
        <th>Update</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each studenttasks}}
        <tr>
            <td>{{studentTasksSid}}</td>
            <td>{{studentTasksTid}}</td>
            <td>{{studentTasksCompletion}}</td>
            <td><button onclick="deleteStudentTask({{studentTasksTid}},{{studentTasksSid}})">Delete</button></td>
            <td><a href="/update-teacher/{{teacherID}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>