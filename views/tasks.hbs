
<div class="center"><form method="get" action="/"  >
    <button class="hbutton" type="submit">Go Home</button>
    </form>
    </div>
    
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Class</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each tasks}}
        <tr>
            <td>{{taskID}}</td>
            <td>{{taskDescription}}</td>
            <td>{{taskClass}}</td>
            <td><button onclick="deleteTask({{taskID}})" id="abutton">Delete</button></td>
            <td>
                <button><a href="/tasks/{{taskID}}" id="button">Update</a></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>