<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Class</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{data.taskID}}</td>
            <td>{{data.taskDescription}}</td>
            <td>{{data.taskClass}}</td>
            <td><button><a href="/teachers'{{teacherID}}">Delete</a></button></td>
            <td><a href="/update-teacher/{{teacherID}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>